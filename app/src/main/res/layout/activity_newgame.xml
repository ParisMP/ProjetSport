<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewGame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:background="@color/colorAccent"
        android:orientation="horizontal">
        <!--F-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="75"
            android:orientation="vertical">
            <!--H-->
            <Button
                android:id="@+id/backButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#955381F4"
                android:text="Go back to Menu" />
            <LinearLayout
                android:layout_width="432dp"
                android:layout_height="14dp"
                android:layout_weight="19"
                android:background="@android:color/background_light"
                android:orientation="horizontal">
                <!--M-->
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:textColor="#73E442"
                    android:text="Name Player 1" />

                <EditText
                    android:id="@+id/editText_name"
                    android:layout_width="202dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name" />
            </LinearLayout>

            <!--I-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_weight="19"
                android:background="@android:color/background_light"
                android:orientation="horizontal">
                <!--Q-->
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:textColor="#73E442"
                    android:fontFamily="sans-serif-black"
                    android:text="Name Player 2" />

                <EditText
                    android:id="@+id/editText_surname"
                    android:layout_width="201dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="19"
                android:background="@android:color/background_light"
                android:orientation="horizontal">
                <!--U-->
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Winner Name"
                    android:textColor="#73E442" />

                <EditText
                    android:id="@+id/editText_Winner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="19"
                android:background="@android:color/background_light"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewScore1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:textColor="#2196F3"
                    android:text="Set Score Player 1"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editText_S1J1"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:background="#73E442"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="set 1"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editText_S2J1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="set 2"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editText_S3J1"
                    android:layout_width="94dp"
                    android:background="#73E442"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="set 3" />

            </LinearLayout>
            <!--K-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="19"
                android:background="@android:color/background_light"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewScore2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:textColor="#2196F3"
                    android:text="Set Score Player 2"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editText_S1J2"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="set 1" />

                <EditText
                    android:id="@+id/editText_S2J2"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:background="#73E442"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="set 2" />

                <EditText
                    android:id="@+id/editText_S3J2"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="set 3" />

            </LinearLayout>
            <!--L-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="16"
                android:background="@android:color/background_light"
                android:orientation="horizontal">
                <!--Y-->
                <Button
                    android:id="@+id/button_add"
                    android:layout_width="205dp"
                    android:layout_height="wrap_content"
                    android:background="#2196F3"
                    android:text="Submit Match Result" />

                <Button
                    android:id="@+id/button_viewAll"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="#2196F3"
                    android:text="View All" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="18"
                android:background="@android:color/background_light"
                android:orientation="horizontal">

                <!--Q-->
                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:textColor="#73E442"
                    android:text="id to update or delete :"
                    android:textSize="18sp"
                    android:layout_gravity="end"/>

                <EditText
                    android:id="@+id/editText_id"
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="" />

                <Button
                    android:id="@+id/button_update"
                    android:layout_width="214dp"
                    android:layout_height="wrap_content"
                    android:text="Update" />

                <Button
                    android:id="@+id/button_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DELETE" />
            </LinearLayout>
            <!--G-->

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

